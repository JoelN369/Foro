<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activities.ActivityNewPost"
        tools:showIn="@layout/activity_new_post" android:background="@color/colorPrimary">
    <Spinner
            android:background="@drawable/spinner"
            android:layout_width="266dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            android:dropDownVerticalOffset="10dp"
            app:layout_constraintHorizontal_bias="0.193" android:id="@+id/spCat" android:spinnerMode="dropdown"
            android:padding="5dp" android:paddingTop="10dp" android:entries="@array/spinnerItems"/>
    <EditText
            android:layout_width="243dp"
            android:layout_height="47dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etNewTitulo"
            app:layout_constraintTop_toBottomOf="@+id/spCat"
            android:layout_marginTop="56dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.166"/>
    <ImageButton
            android:layout_width="192dp"
            android:layout_height="193dp"
            android:src="@drawable/upload"
            android:scaleType="fitCenter"
            android:id="@+id/ibAddFoto"
            android:backgroundTint="#3C3F41" android:adjustViewBounds="false"
            app:layout_constraintTop_toBottomOf="@+id/etNewTitulo" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.127" android:tint="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>