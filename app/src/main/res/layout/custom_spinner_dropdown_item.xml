<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="80dp">

    <CheckedTextView
            android:id="@+id/ctvNombreOpcion"

            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Prueba de TEXTO"
            android:layout_weight="8"
            android:textSize="18sp" android:paddingStart="20dp" android:background="@color/backgroundItem"
            android:textColor="@color/textColor"/>
    <ImageView
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="50dp" app:srcCompat="@drawable/configuraciones"
            android:id="@+id/ivImageOpcion"
            android:padding="10dp" android:layout_weight="2" android:background="@color/backgroundItem"
            android:tint="@color/white"/>


</LinearLayout>
