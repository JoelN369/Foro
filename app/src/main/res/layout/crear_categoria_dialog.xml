<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="#313435">


    <TextView
            android:id="@+id/tvNombreComunidad"
            android:text="Nombre de la nueva comunidad"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.323"
            app:layout_constraintVertical_bias="0.172" android:textSize="24sp" android:layout_width="200dp"
            android:textColor="@color/textColor"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNombreComunidad"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreComunidad" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.348" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bCancelar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/etNombreComunidad" android:layout_marginEnd="104dp"/>
    <Button
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bAceptar"
            app:layout_constraintTop_toBottomOf="@+id/etNombreComunidad" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bCancelar" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.644"/>
</androidx.constraintlayout.widget.ConstraintLayout>