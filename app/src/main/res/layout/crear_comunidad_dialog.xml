<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#313435" android:orientation="vertical"
              android:padding="20dp">


    <TextView
            android:id="@+id/tvNombreComunidad"
            android:text="Nombre de la nueva comunidad"
            android:layout_height="wrap_content"
            android:textSize="24sp" android:layout_width="200dp"
            android:textColor="@color/textColor" android:layout_marginStart="20dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etNombreComunidad"
                android:layout_marginTop="55dp"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Aceptar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bAceptar"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentLeft="true" android:layout_marginEnd="22dp"
                    android:layout_marginBottom="22dp"/>
            <Button
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bCancelar"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="22dp" android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp" android:layout_marginBottom="22dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>